<table class="table table-hover">
  <thead>
    <tr>
      <th> <%= t('name_shared_project_list') %> </th>
      <th> <%= t('description_shared_project_list') %> </th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.description %></td>
        <td><%= link_to t('show_shared_project_list'), project_path(project.id), class: 'btn btn-info' %></td>
        <td>
          <% if project_owner? project.id %>
            <%= link_to t('eidt_shared_project_list'), edit_project_path(project.id), class: 'btn btn-info' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>